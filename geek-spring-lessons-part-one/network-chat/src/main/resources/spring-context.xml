<!--    </bean>-->

<!--    <bean id="authService" class="ru.geekbrains.server.auth.AuthServiceJdbcImpl">-->
<!--        <constructor-arg ref="userRepository"/>-->
<!--    </bean>-->

    <bean id="userRepository" class="ru.geekbrains.server.persistance.UserRepository">
        <constructor-arg name="dataSource" ref="dataSource"/>
        <constructor-arg name="param" value="Param value"/>
    </bean>

    <bean id="integerBean" class="java.lang.Integer">
        <constructor-arg value="123"/>
    </bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/network_chat?useUnicode=true&amp;characterEncoding=UTF-8&amp;serverTimezone=UTC"/>
        <property name="username" value="root"/>
        <property name="password" value="root"/>
    </bean>

</beans>